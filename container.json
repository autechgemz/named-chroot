{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "autechgemz/named-baseimage",
    "named_root": "/chroot",
    "named_user": "named",
    "named_confdir": "/etc/named",
    "named_datadir": "/var/named"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "run_command": ["-dit", "{{.Image}}", "/bin/bash"],
      "pull": false,
      "export_path": "container.tar"
    }
  ],
  "provisioners":[
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/ansible-local"
    },
    {
      "type": "ansible-local",
      "playbook_file": "container.yml",
      "staging_directory": "/tmp/ansible-local",
      "extra_arguments": [
        "-e timezone={{user `timezone`}}",
        "-e named_root={{user `named_root`}}",
        "-e named_user={{user `named_user`}}",
        "-e named_confdir={{user `named_confdir`}}",
        "-e named_datadir={{user `named_datadir`}}",
        "-e ansible_python_interpreter=/usr/bin/python3"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "apt-get -y purge ansible python3-apt",
        "apt-get -y autoclean",
        "apt-get -y autoremove",
	"rm -rf /var/lib/apt/lists/*",
	"rm -rf /var/cache/apt/*"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "autechgemz/named",
      "tag": "latest",
      "changes": [
        "ENV TZ {{user `timezone`}}",
        "ENV PATH {{user `named_root`}}\/sbin:{{user `named_root`}}\/bin:\/usr\/sbin:\/usr\/bin:\/sbin:\/bin:$PATH",
        "ENV GOPATH {{user `named_root`}}",
        "EXPOSE 53\/tcp 53\/udp",
        "ENTRYPOINT [ \"\/usr\/bin\/runsvdir\", \"-P\", \"\/services\/\" ]"
      ]
    }
  ]
}
