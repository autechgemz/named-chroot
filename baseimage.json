{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "ubuntu:focal",
    "named_root": "/chroot",
    "named_user": "named",
    "named_confdir": "/etc/named",
    "named_datadir": "/var/named",
    "named_version": "9.16.21"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "run_command": ["-dit", "{{.Image}}", "/bin/bash"],
      "commit": true,
      "changes": [
        "ENV DEBIAN_FRONTEND noninteractive"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "file",
      "source": "files/etc/apt/sources.list",
      "destination": "/etc/apt/sources.list"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y upgrade",
        "apt-get -y install --no-install-recommends ansible python3 python3-apt",
	"mkdir -p /tmp/ansible-local"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/ansible-local"
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbooks/baseimage.yml",
      "staging_directory": "/tmp/ansible-local",
      "extra_arguments": [
        "-e timezone={{user `timezone`}}",
        "-e named_root={{user `named_root`}}",
        "-e named_user={{user `named_user`}}",
        "-e named_confdir={{user `named_confdir`}}",
        "-e named_datadir={{user `named_datadir`}}",
        "-e named_version={{user `named_version`}}",
        "-e ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "autechgemz/named-baseimage",
      "tags": "latest"
    }
  ]
}
